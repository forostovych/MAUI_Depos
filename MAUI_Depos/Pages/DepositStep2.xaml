                                </Frame>

                                <Frame BackgroundColor="#272727" WidthRequest="60"
                                    BorderColor="Transparent" Padding="0">

                                    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">


                                    </StackLayout>

                                </Frame>

                            </StackLayout>

                        </Frame>

                        <Frame BackgroundColor="#272727" HeightRequest="72"
