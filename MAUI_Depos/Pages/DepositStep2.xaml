                                <Frame BackgroundColor="#272727" HorizontalOptions="FillAndExpand"
                                    BorderColor="Transparent" Padding="0">

                                    <StackLayout Padding="5" VerticalOptions="Center">

                                        <Label Text="Change name"
                                            TextColor="White" FontFamily="ebrima.ttf"
