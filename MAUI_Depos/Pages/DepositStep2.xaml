                                    <StackLayout Padding="5" VerticalOptions="Center">

                                        <Label Text="Dividend payment"
                                            TextColor="White" FontFamily="ebrima.ttf"
                                            FontSize="16" FontAttributes="Bold" Margin="0,0,0,0"
